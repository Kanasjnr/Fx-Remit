{
  "author": "kanas",
  "bugs": {
    "url": "https://github.com/celo-org/celo-composer/issues"
  },
  "description": "Custom Celo Composer project.",
  "homepage": "https://github.com/celo-org/celo-composer/blob/main/README.md",
  "keywords": [
    "celo-composer",
    "celo"
  ],
  "license": "MIT",
  "name": "fx-remit",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celo-org/celo-composer.git"
  },
  "overrides": {
    "@wagmi/connectors": "5.7.7",
    "@wagmi/core": "2.16.7",
    "@walletconnect/utils": "^2.19.1",
    "elliptic": "6.6.1",
    "viem": "2.23.2",
    "wagmi": "2.14.11"
  },
  "scripts": {
    "react-app:dev": "pnpm --filter @fx-remit/react-app dev",
    "react-app:build": "pnpm --filter @fx-remit/react-app build",
    "react-app:start": "pnpm --filter @fx-remit/react-app start",
    "react-app:lint": "pnpm --filter @fx-remit/react-app lint",
    "react-app:test": "pnpm --filter @fx-remit/react-app test",
    "react-app:test:watch": "pnpm --filter @fx-remit/react-app test:watch",
    "react-app:test:coverage": "pnpm --filter @fx-remit/react-app test:coverage",
    "react-app:test:e2e": "pnpm --filter @fx-remit/react-app test:e2e",
    "hardhat:postinstall": "pnpm --filter @fx-remit/hardhat postinstall",
    "hardhat:compile": "pnpm --filter @fx-remit/hardhat compile",
    "hardhat:tsc": "pnpm --filter @fx-remit/hardhat tsc",
    "hardhat:build": "pnpm --filter @fx-remit/hardhat build",
    "hardhat:clean": "pnpm --filter @fx-remit/hardhat clean",
    "hardhat:run:node": "pnpm --filter @fx-remit/hardhat run:node",
    "hardhat:test": "pnpm --filter @fx-remit/hardhat test",
    "hardhat:test:coverage": "pnpm --filter @fx-remit/hardhat coverage",
    "hardhat:prettier": "pnpm --filter @fx-remit/hardhat prettier",
    "hardhat:sync:abis": "pnpm --filter @fx-remit/hardhat sync:abis",
    "test": "pnpm run hardhat:test && pnpm run react-app:test",
    "test:coverage": "pnpm run hardhat:test:coverage && pnpm run react-app:test:coverage",
    "test:e2e": "pnpm run react-app:test:e2e",
    "lint": "pnpm run hardhat:prettier && pnpm run react-app:lint",
    "build": "pnpm run hardhat:compile && pnpm run react-app:build"
  },
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.3.0+sha512.ee592eda8815a8a293c206bb0917c4bb0ff274c50def7cbc17be05ec641fc2d1b02490ce660061356bd0d126a4d7eb2ec8830e6959fb8a447571c631d5a2442d"
}
